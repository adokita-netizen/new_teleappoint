{
  "version": 2,
  "functions": {
    "api/index.mjs": {
      "runtime": "nodejs20.x",
      "memory": 256
    }
  },
  "builds": [
    { "src": "dist/server/index.mjs", "use": "@vercel/node" },
    { "src": "dist/public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "dist/server/index.mjs" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "dist/public/index.html" }
  ]
}
