{
  "version": 2,
  "builds": [
    {
      "src": "server/_core/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["drizzle/**", "shared/**"]  // ← 必要なら。無ければ config ごと削除でも可
      }
    },
    { "src": "dist/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/_core/index.ts" },
    { "src": "/(.*)", "dest": "dist/$1" }
  ]
}
